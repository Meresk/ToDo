@model ToDo.Models.User_lw9_02

@{
    ViewData["Title"] = "Регистрация";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <div class="text-center padd">
                <h1 class="display-4 mb-4">Регистрация</h1>
                <div class="card shadow-lg">
                    <div class="card-header text-white bg-primary text-center">
                        <h5 class="mb-0">Создайте новую учетную запись</h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="Register">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                            <div class="form-group">
                                <label asp-for="Name" class="control-label">Имя</label>
                                <input asp-for="Name" class="form-control" placeholder="Введите ваше имя" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" class="control-label">Электронная почта</label>
                                <input asp-for="Email" class="form-control" placeholder="Введите ваш Email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="control-label">Пароль</label>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Введите пароль" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group text-center" style="margin-top: 15px">
                                <input type="submit" value="Создать учетную запись" class="btn btn-primary btn-lg" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div>
                <img src="~/Sources/Images/rem.jpg" alt="Login Banner" class="img-fluid mb-4" />
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
