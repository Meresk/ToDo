@model ToDo.Models.User_lw9_02

@{
    ViewData["Title"] = "Авторизация";
}

<style>
    #rainbowText {
        transition: color 2s ease; /* Плавный переход цвета за 0.5 секунды */
    }
</style>

<div class="text-center padd">
    <h1 class="display-4 mb-4">Авторизация</h1>

    @* Проверяем наличие сообщения об ошибке и отображаем его *@
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg animate__animated animate__fadeIn">
                    <div class="card-body ">
                        <form asp-area="" asp-controller="Account" asp-action="Login" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                            <div class="form-group">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" placeholder="Введите Email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="control-label">Пароль</label>
                                <input type="password" asp-for="Password" class="form-control" placeholder="Введите пароль" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group text-center" style="margin-top: 15px">
                                <input type="submit" value="Войти" class="btn btn-primary btn-lg" />
                            </div>
                        </form>
                    </div>
                </div>
                <div class="animate__animated animate__jackInTheBox">
                    <div id="rainbowText" class="text-center mt-3">
                        <p>Нет аккаунта? <a asp-controller="Account" asp-action="Register">Зарегистрироваться</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script>
    const colors = ['red', 'orange', 'green', 'blue', 'indigo', 'violet'];
    let currentColorIndex = 0;

    function changeColor() {
        const textElement = document.getElementById('rainbowText');
        textElement.style.color = colors[currentColorIndex];
        currentColorIndex = (currentColorIndex + 1) % colors.length; // Переход к следующему цвету
    }

    setInterval(changeColor, 1000); // Изменение цвета каждые 1000 миллисекунд
</script>
